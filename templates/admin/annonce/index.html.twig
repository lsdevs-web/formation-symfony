{% extends '/admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">Gestion des annonces</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">RÃ©servations</th>
                <th class="text-center">Note</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for annonce in annonces %}

                <tr>
                    <td>{{ annonce.id }}</td>
                    <td>{{ annonce.title }}</td>

                    <td>
                        <img src="{{ annonce.author.avatar }}" alt="" class="avatar avatar-mini mr-2">
                        {{ annonce.author.fullName }}
                    </td>

                    <td class="text-center">
                        <span class="badge badge-primary rounded">{{ annonce.bookings |length }}</span>
                    </td>

                    <td class="text-center">
                        <span class="badge badge-primary rounded">{{ annonce.averageRatings|round(0, 'floor') }}</span>

                    </td>

                    <td>
                        <a href="{{ path('admin_annonce_edit', {'id': annonce.id}) }}" class="btn btn-primary"> <i
                                    class="fa fa-edit"></i> </a>
                        <a href="{{ path('admin_annonce_delete', {'id': annonce.id}) }}" class="btn btn-danger"><i
                                    class="fa fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        {{ include('partials/_pagination.html.twig') }}
    </div>

{% endblock %}
