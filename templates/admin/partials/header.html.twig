{% block nav %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <a class="navbar-brand" href="{{ path('home') }}">SymBnB</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="#"> <i class="fa fa-line-chart"></i> Dashboard</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="{{ path('admin_annonces_index') }}"> <i class="fa fa-archive"></i>
                        Annonces</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_booking_index') }}"> <i class="fa fa-folder"></i> Réservations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_comment_index') }}"> <i class="fa fa-comments"></i> Commentaires</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"> <i class="fa fa-users"></i> Utilisateurs</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">

                <li class="nav-item"><a href="{{ path('home') }}" target="_blank" class="nav-link">
                        <i class="fa fa-eye"></i>Voir le site</a>
                </li>

                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accountDropdownLink">
                            <img src="{{ app.user.avatar }}" class="avatar avatar-mini"
                                 alt="Avatar de {{ app.user.fullName }}"> {{ app.user.fullName }}
                        </a>

                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">


                            <a href="{{ path('admin_account_logout') }}" class="dropdown-item">Déconnexion</a>

                        </div>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>


{% endblock nav %}

{# MESSAGE FLASH #}

{% for type, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ type }}">
            {% for message in messages %}
                <p>{{ message | raw }}</p>
            {% endfor %}
        </div>
    </div>

{% endfor %}
